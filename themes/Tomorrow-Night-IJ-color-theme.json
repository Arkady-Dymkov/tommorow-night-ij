{
  "name": "Tomorrow Night IJ",
  "type": "dark",
  "colors": {
    // Base editor colors
    "editor.background": "#1d1f21",
    "editor.foreground": "#c5c8c6",
    "editorCursor.foreground": "#c5c8c6",
    "editorLineNumber.foreground": "#475f63",
    "editorLineNumber.activeForeground": "#c5c8c6",
    "editor.lineHighlightBackground": "#1b2529",
    "editor.selectionBackground": "#373b41",
    "editor.selectionHighlightBackground": "#373b4199",
    "editor.findMatchBackground": "#f8e71c33",
    "editor.findMatchHighlightBackground": "#f8e71c22",
    
    // Editor widgets
    "editorWidget.background": "#1d1f21",
    "editorWidget.border": "#373b41",
    "editorSuggestWidget.background": "#1d1f21",
    "editorSuggestWidget.border": "#373b41",
    "editorSuggestWidget.selectedBackground": "#373b41",
    "editorHoverWidget.background": "#1d1f21",
    "editorHoverWidget.border": "#373b41",
    
    // Activity bar
    "activityBar.background": "#1d1f21",
    "activityBar.foreground": "#c5c8c6",
    "activityBar.inactiveForeground": "#969896",
    "activityBarBadge.background": "#81a2be",
    "activityBarBadge.foreground": "#ffffff",
    
    // Sidebar
    "sideBar.background": "#1d1f21",
    "sideBar.foreground": "#c5c8c6",
    "sideBarTitle.foreground": "#c5c8c6",
    "sideBarSectionHeader.background": "#1d1f21",
    "sideBarSectionHeader.foreground": "#c5c8c6",
    
    // Tabs
    "tab.activeBackground": "#1d1f21",
    "tab.inactiveBackground": "#1d1f21",
    "tab.activeForeground": "#c5c8c6",
    "tab.inactiveForeground": "#969896",
    "tab.activeBorderTop": "#81a2be",
    "tab.border": "#1d1f21",
    
    // Status bar
    "statusBar.background": "#1d1f21",
    "statusBar.foreground": "#c5c8c6",
    "statusBar.noFolderBackground": "#1d1f21",
    "statusBar.debuggingBackground": "#cc6666",
    "statusBar.debuggingForeground": "#ffffff",
    
    // Title bar
    "titleBar.activeBackground": "#1d1f21",
    "titleBar.activeForeground": "#c5c8c6",
    "titleBar.inactiveBackground": "#1d1f21",
    "titleBar.inactiveForeground": "#969896",
    
    // Input controls
    "input.background": "#1d1f21",
    "input.foreground": "#c5c8c6",
    "input.border": "#373b41",
    "inputOption.activeBorder": "#81a2be",
    
    // Terminal
    "terminal.background": "#1d1f21",
    "terminal.foreground": "#c5c8c6",
    "terminal.ansiBlack": "#1d1f21",
    "terminal.ansiRed": "#cc6666",
    "terminal.ansiGreen": "#b5bd68",
    "terminal.ansiYellow": "#f0c674",
    "terminal.ansiBlue": "#81a2be",
    "terminal.ansiMagenta": "#b294bb",
    "terminal.ansiCyan": "#8abeb7",
    "terminal.ansiWhite": "#c5c8c6",
    "terminal.ansiBrightBlack": "#969896",
    "terminal.ansiBrightRed": "#ff6b68",
    "terminal.ansiBrightGreen": "#70ff70",
    "terminal.ansiBrightYellow": "#ffff00",
    "terminal.ansiBrightBlue": "#7eaef1",
    "terminal.ansiBrightMagenta": "#ff99ff",
    "terminal.ansiBrightCyan": "#6cdada",
    "terminal.ansiBrightWhite": "#ffffff",
    
    // Scrollbar
    "scrollbarSlider.background": "#373b4180",
    "scrollbarSlider.hoverBackground": "#373b41aa",
    "scrollbarSlider.activeBackground": "#373b41dd",
    
    // Lists and trees
    "list.activeSelectionBackground": "#373b41",
    "list.activeSelectionForeground": "#c5c8c6",
    "list.inactiveSelectionBackground": "#373b4180",
    "list.inactiveSelectionForeground": "#c5c8c6",
    "list.hoverBackground": "#28282866",
    "list.highlightForeground": "#81a2be",
    
    // Git decorations
    "gitDecoration.modifiedResourceForeground": "#80cbc4",
    "gitDecoration.deletedResourceForeground": "#cc6666",
    "gitDecoration.untrackedResourceForeground": "#b5bd68",
    "gitDecoration.ignoredResourceForeground": "#969896",
    "gitDecoration.conflictingResourceForeground": "#f0c674"
  },
  "tokenColors": [
    {
      "name": "Comment",
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": {
        "foreground": "#969896",
        "fontStyle": "italic"
      }
    },
    {
      "name": "String",
      "scope": ["string", "string.quoted", "string.template"],
      "settings": {
        "foreground": "#b5bd68"
      }
    },
    {
      "name": "Number",
      "scope": "constant.numeric",
      "settings": {
        "foreground": "#de935f"
      }
    },
    {
      "name": "Built-in constant",
      "scope": "constant.language",
      "settings": {
        "foreground": "#b294bb",
        "fontStyle": "italic"
      }
    },
    {
      "name": "User-defined constant",
      "scope": ["constant.character", "constant.other"],
      "settings": {
        "foreground": "#de935f"
      }
    },
    {
      "name": "Variable",
      "scope": ["variable", "variable.other"],
      "settings": {
        "foreground": "#cc6666"
      }
    },
    {
      "name": "Keyword",
      "scope": ["keyword", "keyword.control", "keyword.operator.new"],
      "settings": {
        "foreground": "#b294bb",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Storage",
      "scope": "storage",
      "settings": {
        "foreground": "#b294bb",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Storage type",
      "scope": "storage.type",
      "settings": {
        "foreground": "#b294bb",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Class name",
      "scope": ["entity.name.class", "entity.name.type.class"],
      "settings": {
        "foreground": "#f0c674"
      }
    },
    {
      "name": "Inherited class",
      "scope": "entity.other.inherited-class",
      "settings": {
        "foreground": "#b5bd68"
      }
    },
    {
      "name": "Function name",
      "scope": ["entity.name.function", "support.function"],
      "settings": {
        "foreground": "#81a2be"
      }
    },
    {
      "name": "Function argument",
      "scope": "variable.parameter",
      "settings": {
        "foreground": "#de935f"
      }
    },
    {
      "name": "Tag name",
      "scope": "entity.name.tag",
      "settings": {
        "foreground": "#cc6666"
      }
    },
    {
      "name": "Tag attribute",
      "scope": "entity.other.attribute-name",
      "settings": {
        "foreground": "#f0c674",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Library function",
      "scope": "support.function",
      "settings": {
        "foreground": "#81a2be"
      }
    },
    {
      "name": "Library constant",
      "scope": "support.constant",
      "settings": {
        "foreground": "#de935f"
      }
    },
    {
      "name": "Library class/type",
      "scope": ["support.type", "support.class"],
      "settings": {
        "foreground": "#f0c674"
      }
    },
    {
      "name": "Invalid",
      "scope": "invalid",
      "settings": {
        "foreground": "#cc6666"
      }
    },
    {
      "name": "Invalid deprecated",
      "scope": "invalid.deprecated",
      "settings": {
        "foreground": "#a3685a"
      }
    },
    {
      "name": "Punctuation",
      "scope": "punctuation",
      "settings": {
        "foreground": "#c5c8c6"
      }
    },
    {
      "name": "Operators",
      "scope": "keyword.operator",
      "settings": {
        "foreground": "#c5c8c6"
      }
    },
    
    // Kotlin specific
    {
      "name": "Kotlin Keywords",
      "scope": [
        "keyword.other.kotlin",
        "storage.type.kotlin"
      ],
      "settings": {
        "foreground": "#b294bb",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Kotlin Classes",
      "scope": [
        "entity.name.class.kotlin",
        "entity.name.type.class.kotlin"
      ],
      "settings": {
        "foreground": "#f0c674"
      }
    },
    {
      "name": "Kotlin Interfaces",
      "scope": [
        "entity.name.type.interface.kotlin"
      ],
      "settings": {
        "foreground": "#b5bd68",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Kotlin Functions",
      "scope": [
        "entity.name.function.kotlin"
      ],
      "settings": {
        "foreground": "#81a2be"
      }
    },
    {
      "name": "Kotlin Variables",
      "scope": [
        "variable.other.kotlin"
      ],
      "settings": {
        "foreground": "#cc6666"
      }
    },
    {
      "name": "Kotlin Parameters",
      "scope": [
        "variable.parameter.kotlin"
      ],
      "settings": {
        "foreground": "#de935f"
      }
    },
    {
      "name": "Kotlin Annotations",
      "scope": [
        "meta.annotation.kotlin",
        "storage.type.annotation.kotlin"
      ],
      "settings": {
        "foreground": "#b294bb"
      }
    },
    {
      "name": "Kotlin Package",
      "scope": [
        "keyword.other.package.kotlin"
      ],
      "settings": {
        "foreground": "#b294bb",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Kotlin Import",
      "scope": [
        "keyword.other.import.kotlin"
      ],
      "settings": {
        "foreground": "#b294bb",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Kotlin String Interpolation",
      "scope": [
        "meta.template.expression.kotlin"
      ],
      "settings": {
        "foreground": "#c5c8c6"
      }
    },
    
    // Kotlin specific - enhanced with actual scopes from the language file
    {
      "name": "Kotlin Keywords",
      "scope": [
        "keyword.soft.kotlin",
        "keyword.hard.kotlin",
        "keyword.hard.class.kotlin",
        "keyword.hard.object.kotlin",
        "keyword.hard.typealias.kotlin",
        "keyword.hard.fun.kotlin",
        "keyword.hard.package.kotlin",
        "keyword.control.kotlin",
        "storage.modifier.other.kotlin"
      ],
      "settings": {
        "foreground": "#b294bb",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Kotlin Classes and Types",
      "scope": [
        "entity.name.type.class.kotlin",
        "entity.name.type.kotlin"
      ],
      "settings": {
        "foreground": "#f0c674"
      }
    },
    {
      "name": "Kotlin Objects",
      "scope": [
        "entity.name.type.object.kotlin"
      ],
      "settings": {
        "foreground": "#f0c674"
      }
    },
    {
      "name": "Kotlin Interfaces and Type Parameters",
      "scope": [
        "entity.name.type.interface.kotlin"
      ],
      "settings": {
        "foreground": "#b5bd68",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Kotlin Functions",
      "scope": [
        "entity.name.function.declaration.kotlin",
        "entity.name.function.call.kotlin",
        "entity.name.function.reference.kotlin"
      ],
      "settings": {
        "foreground": "#81a2be"
      }
    },
    {
      "name": "Kotlin Extension Receiver",
      "scope": [
        "entity.name.type.class.extension.kotlin"
      ],
      "settings": {
        "foreground": "#cc6666"
      }
    },
    {
      "name": "Kotlin Variables and Parameters",
      "scope": [
        "variable.other.kotlin",
        "variable.parameter.kotlin"
      ],
      "settings": {
        "foreground": "#de935f"
      }
    },
    {
      "name": "Kotlin Self References",
      "scope": [
        "variable.language.this.kotlin"
      ],
      "settings": {
        "foreground": "#b294bb",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Kotlin Annotations",
      "scope": [
        "entity.name.type.annotation.kotlin",
        "entity.name.type.annotation-site.kotlin"
      ],
      "settings": {
        "foreground": "#b294bb"
      }
    },
    {
      "name": "Kotlin Package",
      "scope": [
        "entity.name.package.kotlin"
      ],
      "settings": {
        "foreground": "#b5bd68"
      }
    },
    {
      "name": "Kotlin String Interpolation",
      "scope": [
        "meta.template.expression.kotlin",
        "variable.string-escape.kotlin"
      ],
      "settings": {
        "foreground": "#cc6666"
      }
    },
    {
      "name": "Kotlin Documentation",
      "scope": [
        "comment.block.javadoc.kotlin",
        "keyword.other.documentation.javadoc.kotlin"
      ],
      "settings": {
        "foreground": "#969896",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Kotlin Lambda Arrow",
      "scope": [
        "storage.type.function.arrow.kotlin"
      ],
      "settings": {
        "foreground": "#b294bb",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Kotlin Modifiers",
      "scope": [
        "storage.modifier.kotlin" 
      ],
      "settings": {
        "foreground": "#b294bb",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Kotlin Operators",
      "scope": [
        "keyword.operator.comparison.kotlin",
        "keyword.operator.assignment.arithmetic.kotlin",
        "keyword.operator.assignment.kotlin",
        "keyword.operator.arithmetic.kotlin",
        "keyword.operator.logical.kotlin",
        "keyword.operator.increment-decrement.kotlin",
        "keyword.operator.range.kotlin"
      ],
      "settings": {
        "foreground": "#c5c8c6"
      }
    },
    // Fix for Kotlin parameters not being highlighted
    {
      "name": "Function Parameters",
      "scope": [
        "variable.parameter"
      ],
      "settings": {
        "foreground": "#de935f"
      }
    },
    {
      "name": "Kotlin Parameters - Higher Specificity",
      "scope": [
        "variable.parameter.kotlin"
      ],
      "settings": {
        "foreground": "#de935f",
        "fontStyle": "" // Explicitly remove any font style to ensure visibility
      }
    },
    {
      "name": "Kotlin Key Parameters",
      "scope": [
        "variable.parameter.kotlin"
      ],
      "settings": {
        "foreground": "#de935f"
      }
    },
    {
      "name": "Kotlin Function Parameters in Docs",
      "scope": [
        "variable.parameter.kotlin",
        "meta.function.parameters.kotlin"
      ],
      "settings": {
        "foreground": "#de935f"
      }
    },
    {
      "name": "Kotlin Variables - Separate from Parameters",
      "scope": [
        "variable.other.kotlin"
      ],
      "settings": {
        "foreground": "#cc6666"
      }
    },
    // Additional Kotlin scopes that might be relevant for parameter highlighting
    {
      "name": "Kotlin Lambda Parameters",
      "scope": "meta.function.kotlin variable.parameter.kotlin",
      "settings": {
        "foreground": "#de935f"
      }
    }
  ]
}
